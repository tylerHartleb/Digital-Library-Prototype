<UserControl x:Class="CPSC_481_Digital_Library_Prototype.Components.BookDetailCompact"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC_481_Digital_Library_Prototype.Components"
             mc:Ignorable="d" 
             d:DesignHeight="165" d:DesignWidth="122">
    <Grid x:Name="CompactDetails" Background="White" Width="122" Height="165" MouseDown="BookDetail_MouseDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Name="BookCover" Source="/Book covers/book-cover-placeholder.png" Width="106" Height="135" Margin="8,0,8,0" Stretch="Fill" Grid.Column="0" Grid.Row="0" />
        <StackPanel Grid.Column="0" Grid.Row="1">
            <TextBlock x:Name="Title" HorizontalAlignment="Left" Margin="8,2,8,0" TextWrapping="NoWrap"  Text="Placeholder Title" VerticalAlignment="Top" FontSize="10" FontWeight="Medium"/>
            <TextBlock x:Name="Author" HorizontalAlignment="Left" Margin="8,0,8,0" TextWrapping="Wrap" Text="PlaceHolder Author" VerticalAlignment="Top" FontSize="8" FontWeight="Normal"/>
        </StackPanel>
    </Grid>
</UserControl>
