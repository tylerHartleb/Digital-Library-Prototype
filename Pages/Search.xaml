            <TextBlock HorizontalAlignment="Left" Margin="101,34,0,0" TextWrapping="Wrap" Text="Madeline Miller" VerticalAlignment="Top" FontSize="14" FontWeight="Medium"/>
            <TextBlock HorizontalAlignment="Left" Margin="101,52,0,0" TextWrapping="Wrap" Text="4.5" VerticalAlignment="Top" FontSize="14" FontWeight="Medium"/>
            <Image Margin="125,54,202,66" Source="/Icons/star.png" Stretch="Fill"/>
            <Image Margin="101,105,222,10" Source="/Icons/book.png" Stretch="Fill"/>
            <Image Margin="126,105,194,10" Source="/Icons/smartphone.png" Stretch="Fill"/>
            <Image Margin="154,105,169,10" Source="/Icons/headphone.png" Stretch="Fill"/>
