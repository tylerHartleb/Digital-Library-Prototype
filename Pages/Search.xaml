        </Button>
        <Button BorderBrush="Black" BorderThickness="1" Background="White" Height="25" Margin="242,124,53,499">
            <Grid Width="92">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Grid.Column="0"  Source="/icons8-search-30.png" Margin="0,2,5,3" />
