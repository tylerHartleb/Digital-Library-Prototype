<UserControl x:Class="CPSC_481_Digital_Library_Prototype.Pages.Account"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CPSC_481_Digital_Library_Prototype.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="648" d:DesignWidth="393"
>
    <Grid Background="White">
        <Image Source="\Images\account.png" HorizontalAlignment="Center" Height="100" Margin="0,27,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Name" FontSize="20" HorizontalAlignment="Center" Margin="0,122,0,0" VerticalAlignment="Top"/>
        <Button Content="Checked out items" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Height="48" Width="373" Margin="0,311,0,0" Click="CheckOut_Button_Click"/>
        <Button Content="On hold items" FontSize="20" HorizontalAlignment="Center" Margin="0,366,0,0" VerticalAlignment="Top" Height="47" Width="373" Click="OnHold_Button_Click"/>
        <Button Content="Fees" FontSize="20" HorizontalAlignment="Center" Margin="0,418,0,0" VerticalAlignment="Top" Height="47" Width="373" Click="Fees_Button_Click"/>
        <Button Content="Email and password" FontSize="20" HorizontalAlignment="Center" Margin="0,470,0,0" VerticalAlignment="Top" Height="47" Width="373" Click="EmailPassword_Button_Click"/>
        <Button Content="Sign out" Background="pink" FontSize="20" HorizontalAlignment="Center" Margin="0,552,0,0" VerticalAlignment="Top" Height="47" Width="373" Click="SignOut_Button_Click"/>
        <Label Content="Items checked out: 1" FontSize="20" HorizontalAlignment="Left" Margin="10,170,0,0" VerticalAlignment="Top"/>
        <Label Content="Items on hold: 1" FontSize="20" HorizontalAlignment="Left" Margin="10,212,0,0" VerticalAlignment="Top"/>
        <Label Content="Overdue fees: $3.00" FontSize="20" HorizontalAlignment="Left" Margin="10,258,0,0" VerticalAlignment="Top"/>




    </Grid>


</UserControl>
